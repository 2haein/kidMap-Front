<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/finish_errand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 심부름 완료" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/location_upd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_horizontal|center_vertical|end"
            android:text="아이 위치 불러오기" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/childMapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="CheckMapFragment" />
</LinearLayout>