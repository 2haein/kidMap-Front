<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FHome.ErrandItemActivity"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="심부름 상세 내용"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/childname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자녀 이름"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="심부름 날짜와 시간"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/idate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="심부름 내용"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ierrandcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView36"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="심부름 목표 장소"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ierrandtarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="출발지"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/ierrandstart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="퀘스트 목록"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/questlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="퀘스트가 없습니다"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="아이가 심부름 중간 지점에서 보낸 사진"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>